#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
void main()
{
	int i,n;
	int *ptr;
	clrscr();
	printf("enter the no. of element:");
	scanf("%d",&n);
	ptr=(int *)calloc(n,sizeof (int));
	if(ptr==NULL)
	{
		printf("memory not allocated \n");
		exit(0);
	}
	else
	{
		printf("memory successfully allocated using calloc.\n");
		for(i=0; i<n; i++)
		ptr[i]=i+1;
	}
	printf("the element of the array are:");
	for(i=0; i<n; i++)
	{
		printf("%d",ptr[i]);
	}
	getch();
}